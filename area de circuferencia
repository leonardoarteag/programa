/* materia: intoduccion a la programacion */
/* programa : calculo del area*/ 
 /*  nombre : leonardo arteaga alba*/ 
   /*fecha  : 12/07/2013*/
/*descripcion : calcular el area de una circuferencia*/ 
/*entrada: pi y radio */
/*salida: area */
#include "stdafx.h"
#include "stdio.h"
#include "conio.h"
#include "math.h"

void main ()
{
  float radio,area;
	printf("\n calcular el area d ela cincurferencia \n");
	printf("============================ \n \n \n");
	printf("ingrese radio: ");
	scanf("%f",&radio);
	if(radio>0)
	{
		area= 3.1416 * pow(radio,2);
	printf("\n \n el area de la circuferencia : %f" , area );
	}
	else 
	{
		printf("\n ERROR: radio invcalido ");
	}
	
	getch();
	
}
